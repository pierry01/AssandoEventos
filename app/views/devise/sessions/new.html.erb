<div class="inner">
  <h3>Log in</h3>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.input :email, label: false, placeholder: 'E-mail', required: false, autofocus: true, input_html: { autocomplete: "email" } %>
    </div>

    <div class="field">
      <%= f.input :password, label: false, placeholder: 'Senha', required: false, input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="field">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <%= f.button :submit, "Log in" %>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>