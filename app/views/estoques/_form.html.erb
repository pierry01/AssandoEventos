<div class="inner">
  <%= simple_form_for(@estoque) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :data %>
      <%= f.input :quantidade %>
      <%= f.input :tipo %>
      <%= f.input :produto %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>